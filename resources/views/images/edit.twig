{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Images</div>
                <div class="panel-body">
                    <form action="{{ path_for('images.edit', { 'id': image.id }) }}" method="post" autocomplete="off">
                        <div class="form-group{{ errors.name ? ' has-error' : '' }}">
                            <label for="name">Name</label>
                            <input type="name" name="name" id="name" placeholder="slider01.xxx" class="form-control" value="{{ image.name }}">
                            {% if errors.name %}
                                <span class="help-block">{{ errors.name | first }}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-info">Save</button>
                        <a href="{{ path_for('images.index') }}" class="btn btn-default">Cancel</a>
                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>        
    </div>
{% endblock %}
