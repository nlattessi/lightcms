{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Slider</div>
                <div class="panel-body">
                    <form action="{{ path_for('slides.add') }}" method="post" autocomplete="off">
                        <div class="form-group{{ errors.order ? ' has-error' : '' }}">
                            <label for="order">Order</label>
                            <input type="number" name="order" id="order" class="form-control" value="{{ old.order }}">
                            {% if errors.order %}
                                <span class="help-block">{{ order.name | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.name ? ' has-error' : '' }}">
                            <label for="name">Name</label>
                            <input type="text" name="name" id="name" placeholder="slide01" class="form-control" value="{{ old.name }}">
                            {% if errors.name %}
                                <span class="help-block">{{ errors.name | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.caption ? ' has-error' : '' }}">
                            <label for="caption">Caption</label>
                            <input type="text" name="caption" id="caption" placeholder="caption text" class="form-control" value="{{ old.caption }}">
                            {% if errors.caption %}
                                <span class="help-block">{{ caption.name | first }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group">
                            <label for="image">Select Image</label>
                            <select id="image" name="image" class="form-control">
                                {% for image in images %}
                                    <option value="{{ image.id }}">{{ image.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <button type="submit" class="btn btn-default">Add</button>
                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
